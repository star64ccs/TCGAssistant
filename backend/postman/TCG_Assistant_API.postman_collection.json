{
  "info": {
    "name": "TCG Assistant API",
    "description": "TCG Assistant 後端API測試集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "認證 API",
      "item": [
        {
          "name": "用戶註冊",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"測試用戶\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "用戶登入",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "驗證Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"]
            }
          }
        },
        {
          "name": "刷新Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "登出",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "卡牌資料 API",
      "item": [
        {
          "name": "獲取Pokemon卡牌",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/card-data/pokemon?limit=10&page=1&search=pikachu",
              "host": ["{{baseUrl}}"],
              "path": ["card-data", "pokemon"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "search",
                  "value": "pikachu"
                }
              ]
            }
          }
        },
        {
          "name": "獲取One Piece卡牌",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/card-data/onepiece?limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["card-data", "onepiece"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "獲取可用卡牌",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/card-data/available?limit=50&game=all",
              "host": ["{{baseUrl}}"],
              "path": ["card-data", "available"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "game",
                  "value": "all"
                }
              ]
            }
          }
        },
        {
          "name": "獲取特定卡牌",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/card-data/1",
              "host": ["{{baseUrl}}"],
              "path": ["card-data", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "收藏管理 API",
      "item": [
        {
          "name": "獲取用戶收藏",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/collection?limit=20&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["collection"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "添加卡牌到收藏",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardId\": 1,\n  \"purchaseDate\": \"2024-01-01\",\n  \"purchasePrice\": 25.50,\n  \"condition\": \"mint\",\n  \"notes\": \"從本地卡店購買\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collection/add",
              "host": ["{{baseUrl}}"],
              "path": ["collection", "add"]
            }
          }
        },
        {
          "name": "更新收藏項目",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"collectionId\": 1,\n  \"purchasePrice\": 30.00,\n  \"condition\": \"near-mint\",\n  \"notes\": \"價格上漲了\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collection/update",
              "host": ["{{baseUrl}}"],
              "path": ["collection", "update"]
            }
          }
        },
        {
          "name": "從收藏移除",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"collectionId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/collection/remove",
              "host": ["{{baseUrl}}"],
              "path": ["collection", "remove"]
            }
          }
        },
        {
          "name": "獲取收藏統計",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/collection/stats",
              "host": ["{{baseUrl}}"],
              "path": ["collection", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "用戶歷史 API",
      "item": [
        {
          "name": "獲取最近記錄",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user-history/recent?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["user-history", "recent"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "獲取所有歷史",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user-history?limit=50&page=1&actionType=collection",
              "host": ["{{baseUrl}}"],
              "path": ["user-history"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "actionType",
                  "value": "collection"
                }
              ]
            }
          }
        },
        {
          "name": "獲取歷史統計",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user-history/stats",
              "host": ["{{baseUrl}}"],
              "path": ["user-history", "stats"]
            }
          }
        },
        {
          "name": "清除歷史記錄",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user-history/clear",
              "host": ["{{baseUrl}}"],
              "path": ["user-history", "clear"]
            }
          }
        }
      ]
    }
  ]
}
